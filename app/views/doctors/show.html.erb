<h1>Doctor's Show Page</h1>

<h3><%= @doctor.name %></h3>
<h3><%= @doctor.department %></h3>

<h1><%= @doctor.name %>'s Appointments</h1>

<ul>
    <% @doctor.appointments.each do |appt| %>
    <li><%= link_to "#{appt.patient.name}", patient_path %></li>
    <li><%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></li>
<% end %>
</ul>