<%# page that displays a link to each patient's show page and the total number of appointments they have. %>
<ul>
  <% @patients.each do |patient| %>
    <li>Name: <%=link_to patient.name, patient %> Number of Appointments: <%=link_to patient.appointments.count, appointment_path(patient.id) %></li>
  <% end %>
</ul>