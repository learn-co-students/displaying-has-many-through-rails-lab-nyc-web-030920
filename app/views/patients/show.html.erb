<h1><%= @patient.name%>'s Show Page</h1>

<h5>Age: <%= @patient.age %></h5>

<h2><%= @patient.name %>'s Appointments:</h2>

<ul>
<% @patient.appointments.each do |appt| %>
    <% doc_id = appt.doctor.id %>
    <li><%= link_to "#{appt.doctor.name}", doctor_path(doc_id) %></li>
    <li><%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></li>
    <% end %>
</ul>

